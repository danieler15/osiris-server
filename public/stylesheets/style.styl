BRAND_COLOR = rgba(50, 160, 108, 1.0)

body
  font-family: Avenir, Montserrat
  margin-left: 0
  margin-right: 0
a
  color: #00B7FF
  
.container
  width: 100%
  margin-left: 0px
  margin-right: 0px
  padding-left: 0px
  padding-right: 0px
  
.hero
  background-image: url("https://s3.amazonaws.com/StartupStockPhotos/20140808_StartupStockPhotos/69.jpg")
  background-size: 100%
  width: 100%
  
.nav-custom
  //max-width: 800px
  width: 100%
  margin-left: auto
  margin-right: auto
  padding-left: 120px
  padding-right: 120px

  padding-top: 20px
  background-color: black
  
.nav-list
  list-style-type: none
  display: block
  float: right
  color: white
  
.nav-list-item
  font-family: 'Lato', Geometria, cursive, Amble, Quicksand, "Sofia Pro", cursive, Texta, "Museo Slab", cursive
  display: inline-block
  margin-left: 30px
  color: white
  font-weight: 300

.brand
  color: white
  text-decoration: none
  font-size: 1.7em
  
.nav-link
  text-decoration: none
  font-size: 1.4em
  color: white

a.nav-link:hover 
  text-decoration: none


.feature
  text-align: center;
  width: 100%
  height: 600px;
  background-color: rgba(255, 255, 255, 0.3)

.feature-logo-img
  width:400px
  height: auto
  margin-top: 100px
  padding:40px
  background-color: rgba(255, 255, 255, 0.0)
  border-style: solid 
  border-width: 0px
  border-color: BRAND_GREEN
  
.hero-img
  margin-left: 0px
  margin-right: 0px
  width: 100%
  max-height: 600px
  z-index: -5
  overflow: hidden

.logo-img
  background-color: black
  height:40px
  width: auto 
  padding-bottom: 14px
  
h1.lead
  width: auto
  margin-left: 200px
  margin-right: 200px
  margin-top: 70px
  text-align: center
  color: white
  font-weight: bold
  font-size: 3.7em
  background-color: rgba(72, 61, 139, 0.5)

p.subtext  
  width: auto
  margin-left: 300px
  margin-right: 300px
  margin-top: 50px
  text-align: center
  color: white
  font-size: 1.5em
  background-color: rgba(0, 0, 0, 0.5)
  
#form-container
  width: 600 px
  margin-left: auto
  margin-right: auto
  margin-top: 10px
  text-align: center

.feature .form-container #centered-formz
  width: 50%
  margin-left: auto
  margin-right: auto
  display: block
  text-align: center
  
.join-form
  width: 500px
  margin-left: auto
  margin-right: auto
  margin-top: 70px
  text-align: center
  
.email-input
  width: 50px
  text-align: right
  
.join-submit
  margin-left: 15px
  
#info

p.info-header
  font-size: 1.6 em
  margin-top: 20px
  margin-left: auto
  margin-right: auto
  text-align: center
  width: 100%

p.info-detail
  font-size: 1.0 em
  margin-top: 35px
  margin-left: auto
  margin-right: auto
  width: 600 px

p.info-step
  font-size: 0.9 em
  font-weight: bold
  margin-left: auto
  margin-right: auto
  width: 70%
  text-align: center

.partners
  height: 800px
  margin-top: 30px
  padding-top: 20px
  background-color: rgba(240, 240, 240, 1.0)

p.partners-header
  font-size: 2.8 em
  margin-top: 0px
  margin-bottom: 20px
  margin-left: auto
  margin-right: auto
  text-align: center
  width: 100%

.partners-row
  margin-left: 100px;
  margin-right: 100px;

.footer
  height: 50px
  margin-top: 50px
  background-color: black
  color: gray

p.footer-label
  width: 50%
  padding-top: 10px
  margin-left: auto
  margin-right: auto
  font-size: 1.3em
  text-align: center

.fixed 
  position: fixed;
  top: 0;
  left: 0;

